---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  widths?: number[];
  sizes?: string;
  loading?: 'lazy' | 'eager';
  decoding?: 'async' | 'auto' | 'sync';
  class?: string;
}

const {
  src,
  alt,
  widths = [320, 480, 640, 768, 1024, 1280, 1600],
  sizes = '(min-width: 1200px) 900px, (min-width: 768px) 720px, 100vw',
  loading = 'lazy',
  decoding = 'async',
  class: className,
} = Astro.props as Props;

// Eagerly load all local images under src/images to map string paths to ImageMetadata
const modules = import.meta.glob<ImageMetadata>('../images/**/*.{png,jpg,jpeg,webp,avif,gif,svg}', {
  eager: true,
  import: 'default',
});

function normalizePath(p: string) {
  // Ensure no protocol; treat as path
  try {
    const u = new URL(p, 'http://x');
    return u.pathname;
  } catch {
    return p;
  }
}

function resolveLocalAsset(path: string): ImageMetadata | undefined {
  const normalized = normalizePath(path);

  // Candidates relative to this component file where glob keys look like '../images/xxx.ext'
  const suffixes = [] as string[];

  if (normalized.startsWith('/src/images/')) {
    suffixes.push('..' + normalized.replace('/src', ''));
  }

  if (normalized.startsWith('/images/')) {
    suffixes.push('..' + normalized);
  }

  // Also try basename match (last resort); may collide if names duplicate
  const base = normalized.split('/').pop();
  if (base) suffixes.push(base);

  // Try exact or endsWith match against glob keys
  for (const [key, imageMeta] of Object.entries(modules)) {
    if (suffixes.some((s) => key === s || key.endsWith('/' + s))) {
      return imageMeta;
    }
  }

  return undefined;
}

const imageMeta = resolveLocalAsset(src);
---

{imageMeta ? (
  <Image
    src={imageMeta}
    alt={alt}
    widths={widths}
    sizes={sizes}
    loading={loading}
    decoding={decoding}
    class={className}
  />
) : (
  <img src={src} alt={alt} loading={loading} decoding={decoding} class={className} />
)}
